%h1
  Log In

= form_tag sessions_path do
  .form-group
    = label_tag :email
    = email_field_tag :email, params[:email], required: true, class: 'form-control'

  .form-group
    = label_tag :password
    = password_field_tag :password, nil, required: true, class: 'form-control'

  = submit_tag('Log in', class: 'btn')
