

.logo
  = image_tag('ribbon_text.png')

.row
  .col-md-6.col-md-offset-3
    = form_tag sessions_path, class: '' do
      .form-group
        = label_tag :email, nil, class: 'control-label sr-only'
        = email_field_tag :email, params[:email], placeholder: 'Your email adress...', required: true, class: 'form-control'

      .form-group
        = submit_tag('Enter ChallengeMe', class: 'btn btn-primary btn-lg')
