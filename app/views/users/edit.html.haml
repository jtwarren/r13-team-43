.jumbotron
  .container
    %h1
      = t('.title')

.row
  .col-md-6.col-md-offset-3
    = form_for @user do |form|
      - if @user.errors.any?
        .alert.alert-danger
          %ul
            - @user.errors.full_messages.each do |message|
              %li
                = message

      .form-group
        = form.label :gravatar

        .controls
          = render 'layouts/gravatar', email: form.object.email

      .form-group
        = form.label :email

        .controls
          = @user.email

    = link_to @user, method: :delete, class: 'btn btn-primary', confirm: t('.delete_confirmation') do
      %i.glyphicon.glyphicon-trash

      = t('.delete_account')
