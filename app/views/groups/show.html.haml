%h1
  = @group.name

%h2
  Members

.row
  .col-md-12
    %ul.list-unstyled
      - @group.users.each do |user|
        %li.pull-left
          = render 'layouts/gravatar', email: user.email

          %br

          = user.title

%h2
  Challenges

= render 'create_challenge', group: @group

%ul.list-unstyled
  = render partial: 'challenges/challenge', collection: @active_challenges

  %hr

  = render partial: 'challenges/challenge', collection: @inactive_challenges
