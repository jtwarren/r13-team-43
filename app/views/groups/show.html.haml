.jumbotron
  .container
    .media
      = image_tag('http://lorempixel.com/200/200/abstract/', class: 'thumbnail pull-left')

      .media-body
        %h1.media-heading
          = @group.name

          %small
            = link_to edit_group_path(@group) do
              Edit

        %p
          = @group.description

        = render 'groups/actions', group: @group

.row
  .col-md-6
    = render 'scores'

  .col-md-6
    = render 'challenges'
