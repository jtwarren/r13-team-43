.row
  .col-md-6.col-md-offset-2
    %h1
      Create a new group

    %hr

    = form_for(@group, html: { class: 'form-horizontal' }) do |form|
      .form-group
        = form.label :name, class: 'control-label col-md-3'

        .col-md-9
          = form.text_field :name, class: 'form-control'

      .form-group
        = form.label :description, class: 'control-label col-md-3'

        .col-md-9
          = form.text_area :description, class: 'form-control'

      .form-group
        = form.label :image_url, class: 'control-label col-md-3'

        .col-md-9
          = form.text_field :image_url, placeholder: 'Image URL...', class: 'form-control'

      .form-group
        .col-md-offset-3.col-md-9
          = form.submit 'Save', class: 'btn btn-primary'

          = link_to 'Cancel', groups_path, class: 'btn'

